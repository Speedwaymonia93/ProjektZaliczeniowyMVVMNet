                            <MultiBinding Converter="{StaticResource dodajWydatek}">
                                <Binding ElementName="tbNaCoWydano" Path="Text"/>
                                <Binding ElementName="tbIleWydano" Path="Text"/>
                                <Binding ElementName="cbKtegoria" Path="SelectedIndex"/>
                            </MultiBinding>
